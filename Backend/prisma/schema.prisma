generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id        Int     @id @default(autoincrement())
  username  String
  room      Room[]
}

model Room {
  Id    Int   @id @default(autoincrement())
  slug  String
  user  User[]
  messages Message[]
}

model Message {
  Id    String    @id @default(uuid())
  text  String 
  room  Room    @relation(fields: [roomId], references: [id])
  roomId String
}
